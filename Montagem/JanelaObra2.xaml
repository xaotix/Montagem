                                            </DataTemplate>
                                        </telerik:GridViewDataColumn.CellTemplate>
                                        <telerik:GridViewDataColumn.AggregateFunctions>
                                            <telerik:SumFunction />
                                        </telerik:GridViewDataColumn.AggregateFunctions>
                                    </telerik:GridViewDataColumn>
                                    <telerik:GridViewDataColumn  Width="auto" Header="Ações"  IsReadOnly="True">
                                        <telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <WrapPanel>
                                                    <Button Click="editar_etapa_dados" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Editar Propriedades">
                                                        <WrapPanel>
                                                            <Image Width="16" Height="16" Source="Resources/document_edit3.png"></Image>
                                                        </WrapPanel>
                                                    </Button>
                                                    <Button Click="editar_etapa" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Editar Apontamentos">
                                                        <WrapPanel>
                                                            <Image Width="16" Height="16" Source="Resources/office-calendar.png"></Image>
                                                        </WrapPanel>
                                                    </Button>
                                                    <Button Click="adicionar_apontamento" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Adicionar Apontamento">
                                                        <WrapPanel>
                                                            <Image Width="16" Height="16" Source="Resources/list-add.png"></Image>
                                                        </WrapPanel>
                                                    </Button>
                                                </WrapPanel>
                                            </DataTemplate>
                                        </telerik:GridViewDataColumn.CellTemplate>
                                    </telerik:GridViewDataColumn>


                                </telerik:RadGridView.Columns>

                            </telerik:RadGridView>
                        </TabItem>
                        <TabItem Header="Recursos e Efetivo">
                            <telerik:RadGridView Grid.Row="0" Background="Transparent" SelectionMode="Extended" ShowGroupPanel="True" x:Name="lista" ShowColumnFooters="True" AutoGenerateColumns="False"  FontSize="10" BorderThickness="0" IsReadOnly="False" ShowSearchPanel="True" >
                                <telerik:RadGridView.Columns>

                                    <telerik:GridViewDataColumn Header="Recurso" DataMemberBinding="{Binding descricao}" Width="auto" IsReadOnly="False" />
                                    <telerik:GridViewDataColumn Header="Equipe" DataMemberBinding="{Binding equipe}" Width="auto" IsReadOnly="False" />
                                    <telerik:GridViewDataColumn Header="Disponível" Width="*" DataMemberBinding="{Binding total_previsto, Mode=OneWay}" IsReadOnly="True">
                                        <telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <ProgressBar Foreground="LimeGreen" Height="20" Style="{StaticResource  SemPorcentagem}" Value="{Binding Path=total_disponivel, Mode=OneWay}" Minimum="0" Maximum="{Binding total_previsto}" />
                                                    <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="U: "></Label>

                                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding total_utilizado, StringFormat='{}{0:0,0.00}'}"></Label>
                                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content=" - P: "></Label>
                                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding total_previsto, StringFormat='{}{0:0,0.00}'}"></Label>
                                                    </WrapPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </telerik:GridViewDataColumn.CellTemplate>
                                        <telerik:GridViewDataColumn.AggregateFunctions>
                                            <telerik:SumFunction />
                                        </telerik:GridViewDataColumn.AggregateFunctions>
                                    </telerik:GridViewDataColumn>


                                    <telerik:GridViewDataColumn  Width="auto" Header="Ações" IsReadOnly="True">
                                        <telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <WrapPanel>
                                                    <Button Click="editar_recurso" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Editar">
                                                        <WrapPanel>
                                                            <Image Width="16" Height="16" Source="Resources/document_edit3.png"></Image>
                                                        </WrapPanel>
                                                    </Button>
                                                    <Button Click="excluir_recurso" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Excluir">
                                                        <WrapPanel>
                                                            <Image Width="16" Height="16" Source="Resources/dialog-error.png"></Image>
                                                        </WrapPanel>
                                                    </Button>
                                                    <Button Click="editar_apontamentos_recurso" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Editar Previsto">
                                                        <WrapPanel>
                                                            <Image Width="16" Height="16" Source="Resources/office-calendar.png"></Image>
                                                        </WrapPanel>
                                                    </Button>
                                                    <Button Click="editar_apontamentos_recurso_realizado" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Editar Realizado">
                                                        <WrapPanel>
                                                            <Image Width="16" Height="16" Source="Resources/office-calendar.png"></Image>
                                                        </WrapPanel>
                                                    </Button>
                                                </WrapPanel>
                                            </DataTemplate>
                                        </telerik:GridViewDataColumn.CellTemplate>
                                    </telerik:GridViewDataColumn>


                                </telerik:RadGridView.Columns>
                            </telerik:RadGridView>

                        </TabItem>
                    </TabControl>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</mui:ModernWindow>
